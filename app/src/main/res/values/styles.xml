<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorMain</item>
        <item name="android:textColorHint">@color/textColorMainLight</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:background">@drawable/bg_edittext_login</item>
    </style>

</resources>
